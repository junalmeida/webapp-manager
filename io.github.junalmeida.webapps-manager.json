{
    "id": "io.github.junalmeida.webapps-manager",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.8",
    "command": "webapps_manager",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-documents"
    ],
    "modules": [
        {
            "name": "webapps_manager",
            "buildsystem": "simple",
            "build-commands": [
                "python3 -m pip install --upgrade build",
                "python3 -m pip install --no-build-isolation --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "path": "dist/io_github_junalmeida_webapps_manager-0.0.0.tar.gz"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ]
}